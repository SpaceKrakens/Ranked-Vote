{
    "env": {
        "browser": true,
        "commonjs": true,
        "shared-node-browser" : true,
        "jquery": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-unreachable": "warn",
        "constructor-super": "warn",
        "indent": ["warn", 4],
        "valid-typeof": "warn",
        "array-bracket-spacing": [2, "never"],
        "block-scoped-var": 2,
        "brace-style": [2, "1tbs"],
        "camelcase": 1,
        "computed-property-spacing": [2, "never"],
        "curly": 2,
        "eol-last": 2,
        "eqeqeq": [2, "smart"],
        "max-depth": [1, 3],
        "max-len": [1, 80],
        "max-statements": [1, 15],
        // added ENUM for DataTypes.ENUM...(same for express stuff) @TODO Regex to make this easier/better
        "new-cap": [1, { "capIsNewExceptions": ["Router", "ENUM"] }],
        "no-extend-native": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-trailing-spaces": 2,
        "no-unused-vars": 1,
        "no-use-before-define": [2, "nofunc"],
        "object-curly-spacing": [2, "never"],
        "quotes": [2, "single", "avoid-escape"],
        "semi": [2, "always"],
        "keyword-spacing": [2, {"before": true, "after": true}],
        "space-unary-ops": 2
    },
    "globals": {
        "GITHUB_CLIENT_ID" : false,
        "GITHUB_CLIENT_SECRET": false,
        "PORT": false,
        "NODE_ENV": false
    }
}
